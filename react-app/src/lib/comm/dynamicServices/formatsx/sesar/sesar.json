{
    "id": "sesar",
    "name": "SESAR",
    "title": "A format compatible with SESAR",
    "description": "A sample template based on SESAR",
    "source": {
        "name": "SESAR",
        "title": "System for Earth Sample Regsitration (SESAR)",
        "logo": "https://www.geosamples.org/sites/geosamples.org/files/images/sesar_logo_right.jpg",
        "url": "https://www.geosamples.org/"
    },
    "mappings": {
        "header": [
            "object_type",
            "user_code"
        ],
        "record": {
            "sample_name": "name"
        },
        "sample": {
            "igsn": "id",
            "parent_igsn": "parent_id"
        }
    },
    "layouts": {
        "grouped": [
            {
                "name": "description",
                "label": "Description",
                "description": "Fields which describe the overall sample event",
                "fields": [
                    "igsn",
                    "parent_igsn",
                    "sample_name",
                    "purpose",
                    "material",
                    "field_name",
                    "field_name_informal_classification",
                    "classification",
                    "field_program_cruise",
                    "related_identifiers",
                    "relation_type",
                    "release_date",
                    "comment",
                    "other_names",
                    "related_url",
                    "related_url_type",
                    "related_url_description",
                    "sub_object_type"
                ]
            },
            {
                "name": "collection",
                "label": "Collection",
                "description": "Fields which describe the collection",
                "fields": [
                    "collection_date",
                    "collection_date_end",
                    "collection_time",
                    "collection_time_end",
                    "collection_date_precision",
                    "collector_chief_scientist",
                    "collector_chief_scientist_address",
                    "collection_method",
                    "collection_method_description"
                ]
            },
            {
                "name": "geolocation",
                "label": "Geolocation",
                "description": "Fields which describe the sample collection location",
                "fields": [
                    "coordinate_precision?",
                    "latitude",
                    "latitude_end",
                    "longitude",
                    "longitude_end",
                    "vertical_datum",
                    "northing",
                    "easting",
                    "navigation_type",
                    "locality_description",
                    "location_description",
                    "name_of_physiographic_feature",
                    "primary_physiographic_feature",
                    "elevation_start",
                    "elevation_end",
                    "elevation_unit",
                    "city_township",
                    "county",
                    "locality",
                    "state_province",
                    "country",
                    "zone"
                ]
            },
            {
                "name": "sample",
                "label": "Sample",
                "description": "Sample measurements and observations",
                "fields": [
                    "sample_description",
                    "depth_in_core_max",
                    "depth_in_core_min",
                    "depth_scale",
                    "launch_id",
                    "launch_platform_name",
                    "launch_type",
                    "platform_type",
                    "platform_description",
                    "platform_name",
                    "size",
                    "size_unit",
                    "age_min",
                    "age_max",
                    "age_unit",
                    "geological_age",
                    "geological_unit"
                ]
            },
            {
                "name": "curation",
                "label": "Curation",
                "description": "Fields which describe the curation of the sample",
                "fields": [
                    "current_archive",
                    "current_archive_contact",
                    "original_archive",
                    "original_archive_contact"
                ]
            }
        ]
    }
}